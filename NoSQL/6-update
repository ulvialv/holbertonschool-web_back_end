// Updates all documents in 'school' collection where name is "Holberton school"
// Adds a new attribute 'address' with value "972 Mission street"

db.school.update(
  { name: "Holberton school" },   // filter: select documents to update
  { $set: { address: "972 Mission street" } },  // update: add new field
  { multi: true }  // update all matching documents
);
